#!/bin/bash
# This script runs a Python script

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
  echo "PYFILE environment variable is not set"
  exit 1
fi

# Check if the Python file exists
if [ ! -f "$PYFILE" ]; then
  echo "Python file does not exist"
  exit 1
fi

# Check if the Python file has the correct shebang
first_line=$(head -n 1 "$PYFILE")
expected_shebang="#!/usr/bin/python3"
if [ "$first_line" != "$expected_shebang" ]; then
  echo "Python file does not have the correct shebang"
  exit 1
fi

# Run the Python script
python3 "$PYFILE"

